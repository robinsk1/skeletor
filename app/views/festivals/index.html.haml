.row
  .large-12.columns

    %h1

-@festivals.in_groups_of(3, false).each do |group|
  .row
    - group.each do |festival|
      .large-4.columns
        .panel
          %p
            = link_to image_tag(festival.pictures.first.cover_image.process(:greyscale).thumb('320x300#').url), festival_artists_path(festival)
          %h3
            %span{:class => "shadow5"}
              =festival.name







